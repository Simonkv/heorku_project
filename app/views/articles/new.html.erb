<h1> New Comment </h1>

<%= form_for :article, url: articles_path do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit "Save comment" %>
	</p>
<% end %>

<%= link_to "Back", articles_path %>
